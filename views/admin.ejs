        <input type="file" id="image_url" name="image_url" required><br>

        <button type="submit">Add Image</button>
    </form>

    <!-- Logout Button -->
    <h2>Logout</h2>
    <form action="/logout" method="POST">
        <button type="submit">Logout</button>
    </form>


</body>
</html>
